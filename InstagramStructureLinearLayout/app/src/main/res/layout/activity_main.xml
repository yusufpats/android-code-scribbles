<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/camera_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/increment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Instagram App" />

        <ImageView
            android:id="@+id/live_tv_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:src="@drawable/ic_action_name" />

        <ImageView
            android:id="@+id/messenger_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="4dp"
            android:src="@drawable/ic_send" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BCBCBC" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/stories_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/stories_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FF00"
                    android:text="Stories" />

                <View
                    android:id="@+id/empty_spacer_view"
                    android:layout_width="wrap_content"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/watch_all_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFF00"
                    android:padding="12dp"
                    android:text="Watch All" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FFFF"
                    android:padding="12dp">

                    <View
                        android:layout_width="72dp"
                        android:layout_height="96dp"
                        android:background="@color/red" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/red" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/red" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/red" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/red" />

                    <View
                        android:layout_width="72dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/red" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="12dp"
                android:background="#BCBCBC"
                android:text="Feed Element 1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="12dp"
                android:background="#BCBCBC"
                android:text="Feed Element 2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="12dp"
                android:background="#BCBCBC"
                android:text="Feed Element 3" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00FFFF" />


</LinearLayout>